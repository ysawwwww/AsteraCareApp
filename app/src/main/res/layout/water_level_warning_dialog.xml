<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/waterLevelWarningTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Storage Water Level Warning"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/emerald_900" />

    <TextView
        android:id="@+id/waterLevelWarningMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The storage water level is critically low. Please refill the water storage!"
        android:layout_marginTop="8dp"
        android:textColor="@color/emerald_900" />

    <Button
        android:id="@+id/btnGotItWaterLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_gravity="end"
        android:backgroundTint="@color/button_color"
        android:layout_marginTop="16dp"/>
</LinearLayout>
