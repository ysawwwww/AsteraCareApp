<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Red background color for the card -->
    <solid android:color="#FF6F61" />  <!-- Red color for the low water level -->

    <!-- Rounded corners for the card -->
    <corners android:radius="12dp" />

    <!-- Border/stroke around the card -->
    <stroke
        android:width="2dp"
        android:color="#003421" />

    <!-- Optional padding inside the card -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
